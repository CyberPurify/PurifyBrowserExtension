{
    "manifest_version": 2,
    "name": "CyberPurify",
    "short_name": "__MSG_short_name__",
    "author": "CyberPurify Software",
    "version": "${version}",
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "icons/icon-16.png",
        "128": "icons/icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "__MSG_name__",
        "default_popup": "pages/popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [{
            "all_frames": true,
            "js": [
                "lib/utils/element-collapser.js",
                "lib/utils/css-hits-counter.js",
                "lib/libs/extended-css.js",
                "lib/content-script/purify-content.js",
                "lib/content-script/common-script.js",
                "lib/content-script/content-script.js",
                "lib/content-script/wrappers.js",
                "lib/content-script/preload.js"
            ],
            "matches": ["http://*/*", "https://*/*"],
            "match_about_blank": true,
            "run_at": "document_start"
        },
        {
            "all_frames": true,
            "css": ["lib/content-script/css/alert-popup.css"],
            "js": ["lib/content-script/content-utils.js"],
            "matches": ["http://*/*", "https://*/*"],
            "match_about_blank": true,
            "run_at": "document_start"
        },
        {
            "all_frames": false,
            "js": ["lib/content-script/i18n-helper.js"],
            "matches": ["http://*/*", "https://*/*"],
            "run_at": "document_end"
        }
    ],
    "options_page": "pages/options.html",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "activeTab",
        "cookies"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}